.form-group.text-center
  %li
    = f.hidden_field :list_type, value: element_type
    .row
      = f.text_field :content, class: "col-md-4 col-md-offset-2", rows: "6", placeholder: "Type your stuff"
      = f.hidden_field :order_number, class: "order_number"
      = f.hidden_field :_destroy
      = link_to "[Remove Item]", "#", class: "remove_element col-md-2"
