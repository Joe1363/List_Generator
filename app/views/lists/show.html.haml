.container
  %h1.text-center= @list.name
  %p.text-center= "Created: #{@list.created_at.strftime("%m-%d-%y")} | Last Updated: #{@list.updated_at.strftime("%m-%d-%y")}"
  %p.text-center
    = link_to "Edit", edit_list_path(@list.id)
    |
    = link_to 'Delete', "/lists/#{@list.id}", data: {confirm: "Are you sure you want to delete this list?"} , method: :delete
  %br
  - @elements.each do |a|
    - if a.element_type == "text"
      %p= a.content
      %br
    - elsif a.element_type == "unordered_list"
      - if a.list_items != nil
        %ul
          - a.list_items.each do |i|
            %li= i.content
