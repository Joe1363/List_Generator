.container
  %h2.text-center= "Manage Lists"
  %br
  .text-center
    = link_to "Create New List", new_list_path, class: "btn btn-default"
  %br
  .row
    .col-md-5.col-md-offset-2.col-sm-5.col-sm-offset-2.col-xs-5.col-xs-offset-2
      %h4.underline= "Title"
    .col-md-1.col-sm-1.col-xs-1.hidden-xs.hidden-sm
      %h4.underline= "Created"
    .col-md-1.col-sm-1.col-xs-1.hidden-xs.hidden-sm
      %h4.underline= "Edited"
    .col-md-1.col-sm-1.col-xs-1
      %h4.underline= "Options"
  - @user.lists.each do |a|
    .row
      .col-md-5.col-md-offset-2.col-sm-5.col-sm-offset-2.col-xs-5.col-xs-offset-2
        %p
          = link_to a.name, list_path(a.id), class: "link_mod"
      .col-md-1.col-sm-1.col-xs-1.hidden-xs.hidden-sm
        %p.text-center= a.created_at.strftime("%m-%d-%y")
      .col-md-1.col-sm-1.col-xs-1.hidden-xs.hidden-sm
        - if a.updated_at != a.created_at
          %p= a.updated_at.strftime("%m-%d-%y")
        - else
          %p= "------------"
      .col-md-2.col-sm-1.col-xs-1
        %p
          = link_to "Edit", edit_list_path(a.id)
          |
          = link_to 'Delete', "/lists/#{a.id}", data: {confirm: "Are you sure you want to delete this list?"} , method: :delete
